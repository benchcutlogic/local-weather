{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://hyperwx.com/schemas/city-catalog.schema.json",
  "title": "City Catalog",
  "type": "object",
  "required": ["cities"],
  "properties": {
    "cities": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "#/$defs/city" }
    }
  },
  "additionalProperties": false,
  "$defs": {
    "terrainProfile": {
      "type": "string",
      "enum": ["mountain", "foothills", "desert", "coastal", "plains"]
    },
    "alertThresholds": {
      "type": "object",
      "properties": {
        "snowIn24hIn": { "type": "number" },
        "windGustMph": { "type": "number" },
        "rainIn1hIn": { "type": "number" },
        "heatIndexF": { "type": "number" },
        "freezingLevelFt": { "type": "number" }
      },
      "additionalProperties": false
    },
    "branding": {
      "type": "object",
      "properties": {
        "heroImage": { "type": "string" },
        "localTagline": { "type": "string" }
      },
      "additionalProperties": false
    },
    "city": {
      "type": "object",
      "required": [
        "slug",
        "aliases",
        "name",
        "state",
        "lat",
        "lon",
        "timezone",
        "elevBandsM",
        "terrainProfile",
        "seasonalHazards"
      ],
      "properties": {
        "slug": { "type": "string", "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$" },
        "aliases": {
          "type": "array",
          "items": { "type": "string", "pattern": "^[a-z0-9-]+$" },
          "uniqueItems": true
        },
        "name": { "type": "string", "minLength": 1 },
        "state": { "type": "string", "minLength": 2, "maxLength": 2 },
        "lat": { "type": "number", "minimum": -90, "maximum": 90 },
        "lon": { "type": "number", "minimum": -180, "maximum": 180 },
        "timezone": { "type": "string", "minLength": 1 },
        "elevBandsM": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "integer", "minimum": -500, "maximum": 10000 }
        },
        "aoiSlug": { "type": "string" },
        "terrainProfile": { "$ref": "#/$defs/terrainProfile" },
        "seasonalHazards": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string" },
          "uniqueItems": true
        },
        "alertThresholds": { "$ref": "#/$defs/alertThresholds" },
        "branding": { "$ref": "#/$defs/branding" }
      },
      "additionalProperties": false
    }
  }
}
