---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "Hyperlocal weather forecasts powered by multi-model analysis and AI commentary" } = Astro.props;
---

<!doctype html>
<html lang="en" class="h-full">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <title>{title} | HyperlocalWx</title>
  </head>
  <body class="h-full bg-snow-50 text-wx-950 font-sans antialiased">
    <nav class="bg-wx-900 text-white shadow-lg">
      <div class="max-w-6xl mx-auto px-4 py-3 flex items-center justify-between">
        <a href="/" class="flex items-center gap-2 text-lg font-bold tracking-tight">
          <svg class="w-6 h-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M3 15h4l3-8 4 16 3-8h4" />
          </svg>
          HyperlocalWx
        </a>
        <div class="flex items-center gap-4 text-sm">
          <a href="/" class="hover:text-wx-200 transition-colors">Cities</a>
          <a
            href="#subscribe"
            class="bg-wx-500 hover:bg-wx-400 px-3 py-1.5 rounded-md font-medium transition-colors"
          >
            Subscribe
          </a>
        </div>
      </div>
    </nav>

    <main class="max-w-6xl mx-auto px-4 py-6">
      <slot />
    </main>

    <footer class="bg-wx-950 text-wx-300 mt-12">
      <div class="max-w-6xl mx-auto px-4 py-8 text-sm">
        <div class="flex flex-col md:flex-row justify-between gap-4">
          <div>
            <p class="font-semibold text-white">HyperlocalWx</p>
            <p class="mt-1">Multi-model weather analysis with terrain-aware AI commentary.</p>
          </div>
          <div class="text-right">
            <p>Data: HRRR, GFS, NAM, ECMWF via NOAA</p>
            <p>Verification: RTMA + crowdsourced reports</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
